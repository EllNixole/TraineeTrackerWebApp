@model IEnumerable<TraineeTracker.App.Models.Tracker>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDoingText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StopDoingText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContinueDoingText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsReviewed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TechnicalSkill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpartanSkill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spartan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDoingText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StopDoingText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContinueDoingText)
            </td>
            <td>
                <form asp-action="UpdateTrackerReviewed" asp-route-id="@item.Id">
                   @Html.CheckBox("IsReviewed", item.IsReviewed, new {onChange="this.form.submit()"})
                </form>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechnicalSkill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpartanSkill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spartan.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger">
                        @using (Html.BeginForm("Delete", "Trackers", new { id = item.Id }))
                        {
                            <input type="submit" class="bg-transparent border-0" value="Delete" onclick="return confirm('Are you sure you wish to delete the entry: @item.Title?')" />
                        }
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
